<h2>Edit Students Details</h2>
<section>
  <form action="/students/<%= @student.id %>" method="POST">
    <input id="id-field" name="id" type="hidden" value="<%= @student.id %>"/>

    <label for="first-name-field">First Name:</label>
    <input id="first-name-field" name="first_name" type="text" value="<%= @student.first_name %>"/>

    <label for="last-name-field">Last Name:</label>
    <input id="last-name-field" name="last_name" type="text" value="<%= @student.last_name %>"/>

    <label for="age">Age<label>
    <input type"number" id="age" name="age" value="<%= @student.age %>"/>

    <label for="house-select">Select student's new house:</label>
      <select id="house-select" name="house">
        <option name="select">
          <% @houses.each do |house|%>
            <% if house.name != @student.get_house().name %>
              <option value=<%= house.id %>><%= house.name %></option>
            <% end %>
            <% if house.name == @student.get_house().name%>
            <option value=<%= house.id %> selected><%= house.name %></option>
            <% end %>
          <% end %>
      </select>
    <input type="submit" value="Confirm student's changes"/>
  </form>
</section>
